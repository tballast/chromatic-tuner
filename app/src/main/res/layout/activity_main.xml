        android:layout_row="2"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="@string/note_Eb"
        android:background="#3ef563"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/text8"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="@string/note_E"
        android:background="#33bc81"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/text9"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="@string/note_F"
        android:background="#33c2ff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/text10"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="@string/note_Fs"
        android:background="#337eff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/text11"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="@string/note_G"
        android:background="#3358ff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
